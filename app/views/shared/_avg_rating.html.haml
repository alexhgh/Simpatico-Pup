%div{:class=>"row rating-desc col-sm-8"}
    %div{:class=>"row"}
        %div{:class=>"col-sm-5 text-left rating-label"}
            %small #{title} 
    %div{:class=>"row"}
        %div{:class=>"col-sm-1 text-center"}
            %span{:class=>"fa"} 
                %strong #{rating}
        %div{:class=>"col-sm-11"}
            %div{:class=>"progress"}
                - if width >= 75
                    %div{:class=>"progress-bar progress-bar-success", :role=>"progressbar", :style=>"width: #{width}%"}
                - elsif width < 50 and width >= 25
                    %div{:class=>"progress-bar progress-bar-warning", :role=>"progressbar", :style=>"width: #{width}%"}
                - elsif width < 25
                    %div{:class=>"progress-bar progress-bar-danger", :role=>"progressbar", :style=>"width: #{width}%"}
                - else
                    %div{:class=>"progress-bar progress-bar", :role=>"progressbar", :style=>"width: #{width}%"}