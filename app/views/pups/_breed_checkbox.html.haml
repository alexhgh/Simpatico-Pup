%div{:class => "form-group great row"}
	%div{:class => "radio-text"}
		%div{:id => 'primary-radio-button'}
			= radio_button_tag 'multiple_breeds', 'Purebred', :checked => "checked"
			= label :pup, 'Purebred'
		%div{:id => 'secondary-radio-button'}
			= radio_button_tag 'multiple_breeds', 'Mixed Breed'
			= label :pup, 'Mixed Breed'	
		%div{:id => 'tertiary-radio-button'}
			= radio_button_tag 'multiple_breeds', 'I do not know'
			= label :pup, 'I do not know'
	%div{:id => "primary-breed"}
		= render 'select_input', title: "Primary Breed", list: @all_breeds, var: :breed_1
	%div{:id => "secondary-breed"}
		= render 'select_input', title: "Secondary Breed", list: @all_breeds_none, var: :breed_2
