%div{:class => "container"}
  %div{:class => "header"}
    %h1 How Long?

  - flash.each do |key, value|
    %p{:class => "unfilled_fields"}= value

  = form_tag dog_breeder_path, :class => "form-horizontal", :method=>'get' do

    /BASIC INFO GROUP/
    =label :pup, "Is your dog a purebred or a mix of two known breeds?"
    = render 'breed_checkbox'

    %div{:class => "form-group col-sm-2"}
      = submit_tag 'Next', :id => 'next_button', :class => "form-control", :confirm => ""
